
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:background="#E9F1FA"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#E9F1FA"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:background="#00A3E4"
            android:orientation="horizontal" >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="25dp"
                android:text="Login Alumini"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="#E9F1FA"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etTPOid"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:hint="Enter Phone"
                android:drawablePadding="8dp"
                />

            <EditText
                android:id="@+id/etTPOPass"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="16dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:hint="Enter Password"
                android:password="true" />


            <Button
                android:id="@+id/btnLoginTPO"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/box_background"
                android:text="Login"
                android:backgroundTint="#00ABE4"
                android:textColor="#000"
                android:textSize="13dp"
                tools:ignore="TextSizeCheck" />


<!--            <TextView-->
<!--                android:id="@+id/tvRegister"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal|center_vertical"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:text="register_Alumini"-->
<!--                android:textColor="#FF3F51B5"-->
<!--                android:textColorHint="#3F51B5"-->
<!--                android:textSize="18sp"-->
<!--                android:textStyle="bold"-->
<!--                tools:ignore="TextSizeCheck" />-->

            <Button
                android:id="@+id/tvRegister"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/box_background"
                android:text="register_Alumini"
                android:backgroundTint="#00ABE4"
                android:textColor="#000"
                android:textSize="13dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
