<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E9F1FA"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <EditText
            android:id="@+id/etPhoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:drawablePadding="8dp" />
        <EditText
            android:id="@+id/etUsn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter usn"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:drawablePadding="8dp" />
        <EditText
            android:id="@+id/etTenthScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tenth Score"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:drawablePadding="8dp" />

        <EditText
            android:id="@+id/etTwelthScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Twelth / diploma Score (in %)"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:drawablePadding="8dp" />

        <EditText
            android:id="@+id/etCGPL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CGPA"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:drawablePadding="8dp" />

        <EditText
            android:id="@+id/etOtherCertificationPrograms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other Certification Programs"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:drawablePadding="8dp" />

        <EditText
            android:id="@+id/etOtherSkill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other Skill"
            android:background="@drawable/edittext_background"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/box_background"
            android:backgroundTint="#00ABE4"
            android:textColor="#000"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
